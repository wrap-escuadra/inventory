{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Product_code</th>
                <td>{{ product.productCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Supplier_id</th>
                <td>{{ product.supplierId }}</td>
            </tr>
            <tr>
                <th>Supplier_price</th>
                <td>{{ product.supplierPrice }}</td>
            </tr>
            <tr>
                <th>Interest_rate</th>
                <td>{{ product.interestRate }}</td>
            </tr>
            <tr>
                <th>Computed_price</th>
                <td>{{ product.computedPrice }}</td>
            </tr>
            <tr>
                <th>Online_price</th>
                <td>{{ product.onlinePrice }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ product.img }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}